---
import BackgroundLayout from '../layouts/Inside.astro';
import NavbarLayout from '../layouts/Navbar';
import { Tab } from '../constant/tab';
import { user } from '../controllers/auth';
---
<BackgroundLayout title={Tab.REPORTS}>
	<main class="w-full h-lvh absolute px-4 py-2 overflow-y-auto">
		<NavbarLayout user={user.get()!} pathname={Astro.url.pathname} client:load/>
        <div class="w-full h-fit lg:h-5/6 bg-red-300 flex flex-col lg:flex-row lg:justify-between">
            <section class="w-full h-fit lg:w-96 lg:h-full bg-green-300 p-6">
                <h1 class="text-2xl text-white font-semibold">Reportes</h1>
            </section>
            <section class="w-full h-fit lg:h-full bg-blue-400">
                <h2>Titulo</h2>
            </section>
        </div>
	</main>
</BackgroundLayout>